{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "command": "npm run dev",
            "name": "Run npm run dev",
            "request": "launch",
            "type": "node-terminal",
            "cwd": "${workspaceFolder}/main_site"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Controller Local Launch",
            "program": "${workspaceFolder}/backend/controller/target/debug/controller",
            "args": [],
            "cwd": "${workspaceFolder}/backend/controller/"
        },
        {
        "name": "(gdb) Launch",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/POC/mainserver/cpp/build/POC",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description":  "Set Disassembly Flavor to Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ],
        "preLaunchTask": "CMake: build"
    }]
}
